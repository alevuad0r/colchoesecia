<h1>Listing usuarios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Login</th>
    <th>Senha</th>
    <th>Telefone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nome %></td>
    <td><%= usuario.login %></td>
    <td><%= usuario.senha %></td>
    <td><%= usuario.telefone %></td>
    <td><%= usuario.email %></td>
    <td><%= link_to 'Exibir', usuario %></td>
    <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Excluir', usuario, confirm: 'Voce tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

