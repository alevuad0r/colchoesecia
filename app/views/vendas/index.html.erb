<% @vendas.each do |venda| %>
  <tr>
    <td><%= venda.cliente_id %></td>
    <td><%= venda.produtos %></td>
    <td><%= venda.usuario_id %></td>
    <td><%= venda.valor_da_venda %></td>
    <td><%= link_to 'Show', venda %></td>
